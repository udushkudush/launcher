  "Katana402": {
    "app": "%KATANA_ROOT%/bin/katanaBin.exe",
    "beauty_name": "Katana 4.0v2 VrayNext",
    "KATANA_VER": "4.0v2",
    "KATANA_ROOT": "c:/Program Files/Katana%KATANA_VER%",
    "YETI_HOME": "%START_DIR%/katana/yeti",
    "VRAY_INSTALL_PATH": "%START_DIR%/katana/vray4",
