    "include": ["maya_basis", "vray_5.json", "yeti_4.json"],
    "VRAY_HOME": "%CONFIG_ROOT%/plugins/vray",
    "MAYA_LOCATION": "C:/Program Files/Autodesk/Maya%MAYA_VER%",
